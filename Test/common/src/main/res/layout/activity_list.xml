<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:vc="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <com.android.weici.common.widget.VUITitleBar
        android:id="@+id/title_bar"
        style="@style/VUITitleBarStyle"
        vc:vui_titlebar_title="教材词汇" />

    <LinearLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:divider="#f4f4f4"
            android:dividerHeight="10dp"
            android:listSelector="@drawable/ripple_item_selector"
            android:scrollbars="none" />
    </LinearLayout>
</LinearLayout>